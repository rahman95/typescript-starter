{
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts", "node_modules"],
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "allowJs": true
    }
  }